<h1>Login<h1>

<h5>
<%= form_tag '/sessions' do %> 

  <div class="form-group">
    <label>Email</label>
    <%= text_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Password</label>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
</h5>